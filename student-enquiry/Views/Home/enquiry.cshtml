                            </div>
                            <div class="col-md-4">
                                <input type="radio" id="gender1" name="GENDER" value="Male" checked />Male
                                <input type="radio" id="gender2" name="GENDER" value="Female" />Female
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Reference</label>
                            <input type="text" class="form-control" name="REFERENCE" id="reference" placeholder="Enter Reference">
                            <!-- <span class="help-block error">* User Name Already Exist</span> -->
                        </div>

                    </div>


                    <div class="form-group">
                        <label>Course Name <span class="error"> </span></label>
                        <select name="COURSE_ENQUIRY" id="course_enquiry" class="form-control select2" dir="ltr" style="width: 100%;">
                            <option value="5">Select course</option>
                            @foreach (var item in ViewBag.course)
                            {
                                                              
                                <option value="@item.ID">@item.COURSE_NAME</option>
                            }
                        </select>
                    </div>

                    <div class="row">
                        <div class="form-group col-sm-6 ">
                            <label>Date of Birth</label>
                            <input type="text" class="form-control" name="DOB" id="datepicker2" autocomplete="off" placeholder="Enter DOB">
                            <!-- <span class="help-block error">* User Name Already Exist</span> -->
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Joining date</label>
                            <input type="text" class="form-control" name="JOINING_DATE" id="datepicker" autocomplete="off" placeholder="Enter Date">
                            <!-- <span class="help-block error">* User Name Already Exist</span> -->
                        </div>
                       


                    </div>

                    <div class="row">
                        <div class="form-group col-sm-6 ">
                            <label>In-Time</label>
                            <input type="time" class="form-control" name="IN_TIME" id="in_time" placeholder="Enter In time">
                            <!-- <span class="help-block error">* User Name Already Exist</span> -->
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Out-Time</label>
                            <input type="time" class="form-control" name="OUT_TIME" id="out_time" placeholder="Enter Out time">
                            <!-- <span class="help-block error">* User Name Already Exist</span> -->
                        </div>

                    </div>

                   

                    <div class="row">

                        <div class="form-group col-sm-6">
                            <label>Given Fees</label>
                            <input type="text" class="form-control" name="FEES" id="fees" placeholder="Enter testimonial">
                            <!-- <span class="help-block error">* User Name Already Exist</span> -->
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Testimonial</label>
                            <input type="text" class="form-control" name="TESTIMONIAL" id="testimonial" placeholder="Enter testimonial">
                            <!-- <span class="help-block error">* User Name Already Exist</span> -->
                        </div>
                    </div>



                    <div class="box-footer">
                        <input type="hidden" id="hdnid" name="ID" />
                        <input type="submit" class="btn btn-success pull-right" id="add" value="Add Enquiry" />
                        <input type="submit" class="btn btn-success pull-right hidden" id="hide" value="Update Enquiry" />
                    </div>
                </form>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</div>



