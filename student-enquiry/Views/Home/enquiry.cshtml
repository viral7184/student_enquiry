                    <div class="row">
                        <div class="form-group col-sm-6">
                            <label>Phone no</label>
                            <input type="text" class="form-control" onkeypress="phoneno()" maxlength="12" name="NUMBER" id="phone_no" placeholder="Enter phone no">
                            <!-- <span class="help-block error">* User Name Already Exist</span> -->
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Email</label>
                            <input type="text" class="form-control" name="EMAIL" id="email" required placeholder="Enter Email">
